    "jest": "^27.0.6",
    "jest-mock-extended": "^2.0.2-beta2",
    "lodash": "4.17.21",
    "prisma": "3.0.2",
    "semantic-release": "^17.4.4",
    "ts-jest": "^27.0.5",
    "ts-node": "10.2.1",
    "ts-node-dev": "1.1.8",
    "typescript": "4.3.5"
